{
  "compilerOptions": {
    "target": "ES2020",                                

    /* Modules */
    "module": "NodeNext",                                
    "rootDir": "src",                                 
    "moduleResolution": "NodeNext",                     
    "outDir": "dist",                                   
    "esModuleInterop": true,                            
                        
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                
  }
}
